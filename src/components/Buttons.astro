---
const {
  query: query,
  styleClass: styleClass,
  buttonContent: content,
} = Astro.props;
---

<a href={query} class={styleClass}>{content}</a>

<style>
  a {
    position: relative;
    height: 40px;
    margin: 15px;
    cursor: pointer;
    position: relative;
    text-decoration: none;
    font-size: 18px;
    color: rgb(255, 255, 255);
  }


  .transDown {
    transition:
      0.5s,
      color 0.1s;
    -webkit-transition:
      0.5s,
      color 0.1s;
    -moz-transition:
      0.5s,
      color 0.1s;
  }
  .transDown:hover {
    transform: translatey(5px);
    -webkit-transform: translatey(5px);
    -moz-transform: translatey(5px);
  }
</style>
