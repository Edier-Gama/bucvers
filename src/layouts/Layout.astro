---
import { ViewTransitions } from "astro:transitions";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400;500;600;700;800&family=Montserrat:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <ViewTransitions />
    <title>Bucverse</title>
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --principal-font: "Montserrat";
        --color-just-black: white;
      }

      body {
        overflow-x: hidden;
        margin: 0 auto;
        max-width: 1200px;
        background-color: var(--color-just-black);
        box-sizing: border-box;
      }
      h1,
      h2,
      h3,
      p,
      a {
        color: black;
        font-family: var(--principal-font);
      }
    </style>
  </body>
</html>
